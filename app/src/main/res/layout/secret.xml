<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/secret_layout"

    android:background="#8CB369"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card2"

        android:background="#BC4B51">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<TextView
                android:id="@+id/secret_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:fontFamily="@font/open_sans"
                android:background="#BC4B51"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:text="this is a test, i'm testing myself, we're doing tests! hi how's it going how ya doing fam!!??"
    android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="4dp"
                />

            <LinearLayout

                android:background="#BC4B51"
                android:id="@+id/bj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/senderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:background="#BC4B51"
                    android:textColor="#BC4B51"
                    android:textSize="0dp"
                    android:text="testing"
                    />


                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-April 20th-"
                    android:gravity="center"
                    android:textColor="#FFF" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>